{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "SQL",
  "scopeName": "source.sql",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-dash.sql",
          "match": "(--).*$\\n?",
          "captures": {
            "1": {
              "name": "punctuation.definition.comment.sql"
            }
          }
        },
        {
          "name": "comment.block.sql",
          "begin": "/\\*",
          "end": "\\*/",
          "captures": {
            "0": {
              "name": "punctuation.definition.comment.sql"
            }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.single.sql",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.sql",
              "match": "\\\\."
            },
            {
              "name": "constant.character.escape.sql",
              "match": "''"
            }
          ]
        },
        {
          "name": "string.quoted.double.sql",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.sql",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.backtick.sql",
          "begin": "`",
          "end": "`",
          "patterns": [
            {
              "name": "constant.character.escape.sql",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.other.sql",
          "match": "(?i)\\b(SELECT|FROM|WHERE|AND|OR|NOT|IN|LIKE|BETWEEN|IS|NULL|ORDER|BY|GROUP|HAVING|LIMIT|OFFSET|INSERT|INTO|VALUES|UPDATE|SET|DELETE|CREATE|DROP|ALTER|TABLE|DATABASE|INDEX|VIEW|PRIMARY|KEY|FOREIGN|REFERENCES|CONSTRAINT|DEFAULT|AUTO_INCREMENT|UNSIGNED|SIGNED|ZEROFILL|CHARACTER|COLLATE|ENGINE|CHARSET|AS|ON|USING|JOIN|INNER|LEFT|RIGHT|OUTER|CROSS|UNION|ALL|DISTINCT|ASC|DESC|CASE|WHEN|THEN|ELSE|END|EXISTS|ANY|SOME|IF|IFNULL|COALESCE|CAST|CONVERT)\\b"
        },
        {
          "name": "keyword.other.DML.sql",
          "match": "(?i)\\b(GRANT|REVOKE|COMMIT|ROLLBACK|SAVEPOINT|START|TRANSACTION|BEGIN|WORK)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.sql",
          "match": "(=|!=|<>|<|>|<=|>=)"
        },
        {
          "name": "keyword.operator.logical.sql",
          "match": "(?i)\\b(AND|OR|NOT)\\b"
        },
        {
          "name": "keyword.operator.arithmetic.sql",
          "match": "(\\+|-|\\*|/|%)"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.sql",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.readwrite.sql",
          "match": "@[a-zA-Z0-9_]+"
        },
        {
          "name": "support.function.sql",
          "match": "(?i)\\b(COUNT|SUM|AVG|MIN|MAX|CONCAT|SUBSTRING|UPPER|LOWER|TRIM|LTRIM|RTRIM|LENGTH|ROUND|FLOOR|CEIL|NOW|CURDATE|CURTIME|DATE|TIME|YEAR|MONTH|DAY|HOUR|MINUTE|SECOND|DATE_FORMAT|STR_TO_DATE|TIMESTAMPDIFF|DATEDIFF)\\b"
        }
      ]
    }
  }
}
